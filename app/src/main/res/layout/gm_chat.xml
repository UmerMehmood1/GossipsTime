<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="3dp">


    <!--    receiver side-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="8sp"
        android:id="@+id/uname_m_itemr"
        android:padding="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:textSize="13sp"
        android:padding="6dp"
        android:textColor="@android:color/white"
        android:background="@drawable/r_back"
        android:id="@+id/gm_itemr"/>



    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:cardCornerRadius="5dp"
        android:visibility="gone"
        android:id="@+id/cv_r_gc">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_item_gcr"
            android:scaleType="centerCrop">
        </ImageView>

    </androidx.cardview.widget.CardView>



    <!--    sender side -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_gravity="right"
        android:textSize="8sp"
        android:id="@+id/uname_m_items"
        android:padding="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:textSize="13sp"
        android:padding="6dp"
        android:layout_gravity="right"
        android:textColor="@color/white"
        android:background="@drawable/sender_back"
        android:id="@+id/gm_items"/>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="right"
        android:visibility="gone"
        android:id="@+id/cv_s_gc">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_item_gcs"
            android:scaleType="centerCrop">
        </ImageView>

    </androidx.cardview.widget.CardView>
</LinearLayout>